@model MvcOnlineTicariOtomasyon.Models.Siniflar.Faturalar
@{
    ViewBag.Title = "FaturaEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Yeni Fatura Sayfası</h2>
<br />

<form method="post" class="form-group">
    @Html.LabelFor(x => x.faturaSiraNo)
    <br />
    @Html.TextBoxFor(x => x.faturaSiraNo, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.faturaTarih)
    <br />
    @Html.TextBoxFor(x => x.faturaTarih, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.faturaVergiDairesi)
    @Html.TextBoxFor(x => x.faturaVergiDairesi, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.faturaSaat)
    @Html.TextBoxFor(x => x.faturaSaat, new { @class = "form-control" })
    <br />    @Html.LabelFor(x => x.teslimEden)
    @Html.TextBoxFor(x => x.teslimEden, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.teslimAlan)
    @Html.TextBoxFor(x => x.teslimAlan, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Kaydet</button>
</form>

