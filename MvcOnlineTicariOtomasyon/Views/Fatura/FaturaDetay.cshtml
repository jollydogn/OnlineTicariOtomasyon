@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Fatura Kalemleri Detay Sayfası</h2>
<br />

<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Tutar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.faturaKalemID</td>
            <td>@x.aciklama</td>
            <td>@x.miktar</td>
            <td>@x.birimFiyat</td>
            <td>@x.tutar</td>
        </tr>
    }

</table>

<a href="/Fatura/YeniKalem" class="btn btn-primary" style="color:white">Yeni Kalem Girişi</a>
