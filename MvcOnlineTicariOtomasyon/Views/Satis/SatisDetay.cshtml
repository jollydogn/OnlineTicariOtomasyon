@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "SatisDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Satış Detayı</h2>
<br />
<table class="table table-condensed">
    <tr>
        <th>Satış ID</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
    </tr>
    @foreach (var x in Model)
    {
<tr>
    <td>@x.satisHareketID</td>
    <td>@x.Urun.urunAd</td>
    <td>@x.Cariler.cariAd @x.Cariler.cariSoyad</td>
    <td>@x.Personel.personelAd @x.Personel.personelSoyad</td>
    <td>@x.fiyat</td>
    <td>@x.adet</td>
    <td>@x.toplamTutar</td>
    <td>@x.tarih</td>
</tr>
    }

</table>
<button class="btn btn-success">Yazdir</button>

