@model MvcOnlineTicariOtomasyon.Models.Siniflar.SatisHareket
@{
    ViewBag.Title = "YeniSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Yeni Satış Sayfası</h2>
<br />

<form method="post" class="form-group">
    @Html.LabelFor(x => x.Urun)
    @Html.DropDownListFor(x => x.urunID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" }) @*uruncontrollerdan gonderdiğimiz viewbag ile id value su ve adını getirdik*@
    @Html.Label("Cari")
    @Html.DropDownListFor(x => x.cariID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" }) @*uruncontrollerdan gonderdiğimiz viewbag ile id value su ve adını getirdik*@
    @Html.LabelFor(x => x.Personel)
    @Html.DropDownListFor(x => x.personelID, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" }) @*uruncontrollerdan gonderdiğimiz viewbag ile id value su ve adını getirdik*@
    @Html.LabelFor(x => x.adet)
    @Html.TextBoxFor(x => x.adet, new { @class = "form-control" })
    @Html.LabelFor(x => x.fiyat)
    @Html.TextBoxFor(x => x.fiyat, new { @class = "form-control" })
    @Html.LabelFor(x => x.toplamTutar)
    @Html.TextBoxFor(x => x.toplamTutar, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Satış Yap</button>
</form>

