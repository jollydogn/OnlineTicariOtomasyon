
@{
    ViewBag.Title = "Index6";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html lang="en">

<head>

    <title>Result Visualization</title>

    <script type="text/javascript" src="https://www.google.com/jsapi"></script>

    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

    <script src="~/Scripts/jquery-3.6.0.min.js"></script>

    <script>

        $(document).ready(function () {

            $.ajax({

                type: "POST",

                dataType: "json",

                contentType: "application/json",

                url: '@Url.Action("VisualizeUrunResult2", "Grafik")',

                success: function (result) {

                    google.charts.load('current', {

                        'packages': ['corechart']

                    });

                    google.charts.setOnLoadCallback(function () {

                        drawChart(result);

                    });

                }

            });
        });
        function drawChart(result) {

            var data = new google.visualization.DataTable();

            data.addColumn('string', 'Name');

            data.addColumn('number', 'Stoklar');

            var dataArray = [];
            $.each(result, function (i, obj) {

                dataArray.push([obj.urun, obj.stok]);

            });

            data.addRows(dataArray);
            var columnChartOptions = {

                title: "Ürün - Stok Grafiği",

                width: 1100,

                height: 700,

                bar: { groupWidth: "20%" },

            };
            var columnChart = new google.visualization.LineChart(document //LineChart

                .getElementById('Linechart_div'));//Linechart_div,Piechart,columnChart



            columnChart.draw(data, columnChartOptions);

        }

    </script>

</head>

<body>

    <div id="Linechart_div"></div>@*Linechart_div,Piechart,columnChart*@

</body>

</html>




