@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
{ 
<p>
    Ürün Adı : @Html.TextBox("p")
    <input type="submit" value="Ara"/>
</p>
}
<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>Urun Ad</th>
        <th>Marka</th>
        <th>Stok Miktarı</th>
        <th>Alış Fiyatı</th>
        <th>Satış Fiyatı</th>
        <th>Durumu</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Satış Yap</th>
    </tr>
    @foreach (var k in Model)
    {
<tr>
    <td>@k.urunAd</td>
    <td>@k.marka</td>
    <td>@k.stok</td>
    <td>₺@k.alisFiyati</td>
    <td>₺@k.satisFiyati</td>
    <td>@k.durum</td>
    <td>@k.Kategori.kategoriAdi</td>
    <td><a href="/Urun/UrunSil/@k.urunID" class="btn btn-danger">Sil</a></td>
    <td><a href="/Urun/UrunGetir/@k.urunID" class="btn btn-warning">Güncelle</a></td>
    <td><a href="/Urun/SatisYap/@k.urunID" class="btn btn-default" style="background-color:chocolate;color:white;">Satış Yap</a></td>
</tr>
        }
</table>

<a href="/Urun/UrunEkle" class="btn btn-primary">Ürün Ekle</a>

