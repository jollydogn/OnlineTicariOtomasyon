@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>ID</th>
        <th>Departman Ad</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var k in Model)
    {
<tr>
    <td>@k.departmanID</td>
    <td>@k.departmanAd</td>
    <td><a href="/Departman/DepartmanSil/@k.departmanID" class="btn btn-danger">Sil</a></td>
    <td><a href="/Departman/DepartmanGetir/@k.departmanID" class="btn btn-warning" style="color:white">Güncelle</a></td>
    <td><a href="/Departman/DepartmanDetay/@k.departmanID" class="btn btn-info" style="color:white">Detaylar</a></td>
</tr>
    }
</table>

<a href="/Departman/DepartmanEkle" class="btn btn-info" style="color:white">Departman Ekle</a>

